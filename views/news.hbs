<div class="card bg-light text-white text-center">
  <img src="https://loremflickr.com/cache/resized/65535_52063947717_902dde2f8b_b_1000_300_nofilter.jpg" class="card-img" alt="...">
  <div class="card-img-overlay">
    <div style="margin: 10% 0 10px;">
      <h1 class="card-title">Find Your Next Vacation</h1>
      <p class="card-text">Design your perfect vacation by choosing from the best attractions.</p>
    </div>
    <form action="">
      <div class="mb-3">
        <input type="text" class="form-control-lg" placeholder="Pick a destination">
        <button class="btn btn-info" type="button" id="button-addon2">Search</button>
      </div>
    </form>
  </div>
</div>
<hr>
<br>
<h2><i class="fa-regular fa-star"></i>New Attractions</h2>

<div class="row row-cols-1 row-cols-md-4 mt-1 g-4">
  {{#each attractions}}
  <div class="col">
    <a class="link-primary" style="color:rgb(0, 0, 0); " href="/attractions/{{this.id}}">
      {{!-- TODO:圖片大小上傳的時候要限制 --}}
      <div class="card h-100 text-center">
        <img src="{{this.photo}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            {{this.name}}
          </h5>
        </div>
      </div>
    </a>
  </div>
  {{/each}}
</div>
<hr>
<br>
<h2><i class="fa-regular fa-star"></i>New Comments</h2>
<div class="row row-cols-1 row-cols-md-4 mt-1 g-4 ">
  {{#each comments}}
    <div class="col">
      <div class="card">
        <div class="card-body">
            <div>
              <h5>
                <a class="link-primary" href="/attractions/{{this.Attraction.id}}">{{this.Attraction.name}}</a>
              </h5>
              <p class="my-4" style="white-space: break-spaces;">{{this.text}}</p>
              - <a class="link-secondary" href="/users/{{this.User.id}}">{{this.User.name}}</a>
              <small>at {{relativeTimeFromNow this.createdAt}}</small>
              <hr>
            </div>
        </div>
      </div>
    </div> 
  {{/each}}
</div>